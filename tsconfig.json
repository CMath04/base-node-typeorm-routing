{
  "compileOnSave": false,
  "buildOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/build",
    "sourceMap": true,
    "inlineSources": true,
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "target": "es6",
    "paths": {
      "*": ["node_modules/*"]
    },
    "lib": ["es2017", "dom"],
    "typeRoots": ["node_modules/@types"],
    "removeComments": true
  },
  "include": ["src/**/*"]
}
